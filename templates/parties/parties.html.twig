{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <div class="title">
        <h1>{{ title }}</h1>

    </div>

    <div class="parties">

            {% for row in row %}
        <a href={{ path('app_party', {id: row.id}) }}>
        <div class="party">
                    {{ row.name }}
                    {{ row.description }}
                    {{ row.date|date('Y-M-d h:m') }}
                    {{ row.image }}
                </div>
        </a>
            {% endfor %}
        </a>

    </div>
{% endblock %}